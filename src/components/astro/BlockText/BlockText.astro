---
interface Props {
    text: string;
    className?: string;
    orientation?: 'left' | 'center' | 'right';
}

const { text, className = "", orientation = "left" } = Astro.props;
---

<p class={`scroll-reveal text-${orientation} sm:text-sm md:text-base lg:text-lg xl:text-xl px-2 font-light leading-tight ${className}`}>
    {text}
</p>
