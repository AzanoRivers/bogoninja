---
import "./VideoBox.css";
const { className = "", src = "", poster = "" } = Astro.props;
// Generamos un id aleatorio para el video
const ALT_ID = `video-${Math.random().toString(36).substr(2, 9)}`;

// Usar el poster personalizado o el placeholder por defecto
const defaultPoster = poster || "/images/video-play-placeholder.svg";
---

<article class={`min-w-1 min-h-1 custom-dashed-long p-1 ${className}`}>
    <video  class="w-full h-full cursor-pointer"  id={ALT_ID}  controls  poster={defaultPoster}  muted >
        {src && <source src={src} type="video/mp4"/>}
        <track kind="captions" />
    </video>
</article>
