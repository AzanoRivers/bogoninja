---
/**
 * Catch-all de páginas — Ruta no encontrada
 *
 * @description
 * Captura cualquier ruta de página que no coincida con un archivo
 * existente. Retorna status 404 con la página de error visual.
 *
 * @author AzanoRivers
 * @ai Claude Sonnet 4.6 (GitHub Copilot)
 */

import MainLayout from "@/layout/MainLayout.astro";
import { PulseLogo, Header } from "@/components";

Astro.response.status = 404;
---

<MainLayout noIndex={true}>
	<Header className="xl:hidden" />
	<div class="flex flex-col items-center justify-center min-h-[80vh] gap-8 px-6">
		<PulseLogo className="mt-4" />
		<div class="text-center space-y-4">
			<h1 class="font-joti sm:text-6xl md:text-7xl lg:text-8xl text-ninja-light-pink mystic-shadow-static">
				404
			</h1>
			<p class="font-joti sm:text-2xl md:text-3xl lg:text-4xl text-ninja-white">
				Página no encontrada
			</p>
			<p class="font-suse sm:text-base md:text-lg lg:text-xl text-ninja-white max-w-md mx-auto">
				La ruta que buscas no existe o fue removida.
			</p>
			<a href="/" class="inline-block mt-6 font-joti sm:text-lg md:text-xl lg:text-2xl text-ninja-dark-pink hover:text-ninja-light-pink transition-colors duration-300 underline decoration-2 underline-offset-4">
				Volver al inicio
			</a>
		</div>
	</div>
	<Header className="sm:hidden xl:block xl:fixed xl:bottom-4 xl:right-4" />
</MainLayout>

